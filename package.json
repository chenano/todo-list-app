{
  "name": "todo-list-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:basic": "playwright test e2e/auth-basic.spec.ts",
    "test:e2e:demo": "playwright test e2e/visual-demo.spec.ts --headed --workers=1",
    "test:e2e:interactive": "playwright test e2e/interactive-demo.spec.ts --headed --workers=1 --timeout=360000",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test e2e/supabase-debug-test.spec.ts --headed --workers=1 --timeout=180000",
    "test:e2e:full": "playwright test e2e/full-app-demo.spec.ts --headed --workers=1",
    "test:e2e:complete": "playwright test e2e/complete-app-test.spec.ts --headed --workers=1",
    "test:e2e:todo": "playwright test e2e/todo-functionality-test.spec.ts --headed --workers=1",
    "test:e2e:summary": "playwright test e2e/app-summary-report.spec.ts --headed --workers=1",
    "test:e2e:real-auth": "playwright test e2e/real-auth-test.spec.ts --headed --workers=1",
    "test:e2e:quick": "playwright test e2e/quick-auth-test.spec.ts --headed --workers=1",
    "test:e2e:keyboard": "playwright test e2e/keyboard-navigation.spec.ts --headed --workers=1",
    "test:e2e:offline": "playwright test e2e/offline-support.spec.ts --headed --workers=1",
    "test:e2e:visual": "playwright test e2e/visual-regression.spec.ts --headed --workers=1",
    "test:e2e:performance": "playwright test e2e/performance-benchmarks.spec.ts --headed --workers=1",
    "test:e2e:cross-browser": "playwright test e2e/cross-browser.spec.ts",
    "test:e2e:accessibility": "playwright test e2e/accessibility-automation.spec.ts --headed --workers=1",
    "test:performance": "jest --testPathPattern=performance",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "npm run test && npm run test:e2e",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "ANALYZE=true BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "ANALYZE=true BUNDLE_ANALYZE=browser npm run build",
    "performance:benchmark": "node -e \"require('./src/lib/performance-testing.js').runPerformanceBenchmarks()\"",
    "performance:monitor": "node -e \"console.log('Performance monitoring enabled in development mode')\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.2",
    "@types/react-window": "^1.8.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "cmdk": "^1.1.1",
    "date-fns": "^2.30.0",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.542.0",
    "next": "14.0.0",
    "react": "^18.0.0",
    "react-day-picker": "^9.9.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.62.0",
    "react-window": "^1.8.8",
    "react-window-infinite-loader": "^1.0.10",
    "recharts": "^3.2.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-window-infinite-loader": "^1.0.9",
    "@types/recharts": "^1.8.29",
    "autoprefixer": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.3.0"
  }
}
